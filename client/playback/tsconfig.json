{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "target": "es6",
    "declaration": true,
    "strict": false,
    "strictNullChecks": false,
    "lib": [ "es2016", "dom" ],
    "noStrictGenericChecks": true,
    "noImplicitUseStrict": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "source"
  ]
}
